<!-- form handling -->
<form action="/api/users" method="POST" id="add_user">
    <div class="new_movie">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="hidden" name="registration_date" value="<%= new Date().toISOString() %>">
            <input type="text" name="name" value="" placeholder="Name...">
        </div>
        <div class="form-group">
            <label for="surname" class="text-light">Surname</label>
            <input type="text" name="surname" value="" placeholder="Surname...">
        </div>
        <div class="form-group">
            <label for="adress" class="text-light">Adress</label>
            <input type="text" name="adress" value="" placeholder="Adress...">
        </div>
        <div class="form-group">
            <label for="phone_number" class="text-light">Phone number</label>
            <input type="text" name="phone_number" value="" placeholder="48111222333" pattern="[0-9]{2}[0-9]{3}[0-9]{3}[0-9]{3}">
        </div>
       
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
